        margin-right: 10px;
        box-shadow: none;
        outline: solid 2px transparent;
        transition: 0.2s;
    }

    .input:not([type=checkbox]):focus {
        outline: solid 2px rgb(226, 226, 226);
    }


    .input-full {
        width: 100%;
    }

    .input:focus {
        box-shadow: none;
        transform: none;
    }

